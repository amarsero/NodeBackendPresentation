{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowJs": false,
		"outDir": "dist",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"strictPropertyInitialization": false,
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,  
		"esModuleInterop": true,  
	},	
	"include": ["src/**/*"]
}